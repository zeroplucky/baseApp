<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <com.mindaxx.zhangp.widget.FingerPanGroup
        android:id="@+id/group"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.mindaxx.zhangp.imageloader.view.GlideImageView
                android:id="@+id/preview_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <com.mindaxx.zhangp.imageloader.view.CircleProgressView
                android:id="@+id/progressView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:progress="0"
                android:visibility="gone"
                app:cpv_innerPadding="2dp"
                app:cpv_outerColor="#E5ffffff"
                app:cpv_outerSize="1dp"
                app:cpv_progressNormalColor="@color/transparent"
                app:cpv_progressReachColor="#E5ffffff"
                app:cpv_progressStyle="FillInnerArc" />

        </RelativeLayout>

    </com.mindaxx.zhangp.widget.FingerPanGroup>

</FrameLayout>